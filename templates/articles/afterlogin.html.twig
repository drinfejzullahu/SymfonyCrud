{% extends "base.html.twig" %}

{% block body %}
    {% include("articles/header2.html.twig") %}




    <table id="user"  class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Password</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{user.name}}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="/edit/{{user.id}}" data-id="{{user.id}}"  class="btn btn-light">Edit</a>
                </td>
            </tr>
        </tbody>
    </table>

{% endblock %}